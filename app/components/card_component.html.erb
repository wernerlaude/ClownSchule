<div class="card shadow border-2">
  <%= image_tag @img, title: @alt, alt: @alt %>
  <div class="card-body">
    <h5 class="card-subtitle"><%= @subtitle %></h5>
    <h4><%= @title %></h4>
    <p class="card-text"><%= @card_text.to_s.html_safe %></p>
    <%= link_to @label, @url, target: '_blank', class: 'btn btn-primary custom-btn-size'%>
  </div>
</div>
