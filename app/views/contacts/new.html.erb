<%= turbo_frame_tag "contacts_frame" do %>
  <%= form_with model: @contact, url: contacts_path, class: "contact-form" do |form| %>
    <%= render partial: "shared/form_errors", locals: { object: form.object } %>

    <div class="form-group">
      <%= form.label :name, "Dein Name *" %>
      <%= form.text_field :name, placeholder: 'Dein Name', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :email, "Deine E-Mail *" %>
      <%= form.email_field :email, placeholder: 'Deine Email', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :telefon, "Telefon (optional)" %>
      <%= form.telephone_field :telefon, class: 'form-control',
                               placeholder: 'Deine Telefonnummer' %>
    </div>

    <div class="form-group">
      <%= form.label :betreff, "Worum geht es? *" %>
      <%= form.select :betreff,
                      [
                        ['Kurs "Entdecke den Clown in Dir"', 'clown-entdecken'],
                        ['KlinikClown Ausbildung', 'klinikclown'],
                        ['Clown Coaching', 'coaching'],
                        ['Performance Feedback', 'feedback'],
                        ['Allgemeine Frage', 'allgemein']
                      ],
                      { prompt: 'Bitte wÃ¤hlen...' },
                      { class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= form.label :message, "Deine Nachricht *" %>
      <%= form.text_area :message, placeholder: 'Deine Nachricht',
                         class: 'form-control', rows: 6 %>
    </div>

    <div class="form-group spam-check">
      <%= textcaptcha_fields(form) do %>
        <small><strong>Simpler Spam-Checkâ€¦</strong><br/>
          <label>Frage:</label>
          <%= form.label :textcaptcha_answer, @contact.textcaptcha_question, class: 'captcha-question' %><br/>
          <%= form.text_field :textcaptcha_answer, value: '',
                              placeholder: 'Deine Antwort', class: 'form-control' %>
        </small>
      <% end %>
    </div>

    <%= form.submit 'Nachricht senden', class: 'btn btn--primary btn--large btn--full' %>
  <% end %>

  <small class="form-note">
    * Pflichtfelder<br/>
    Die abgesendeten Daten werden nur zum Zweck der Bearbeitung deines Anliegens verarbeitet.<br/>
    Meine <%= link_to 'Datenschutzhinweise', datenschutz_path, target: '_top' %> findest du hier.
  </small>
<% end %>